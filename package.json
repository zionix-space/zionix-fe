{
  "name": "@zionix-web/source",
  "version": "0.0.0",
  "license": "MIT",
  "moduleFederation": {
    "shared": [
      "react",
      "react-dom",
      "dayjs",
      "react-router-dom",
      "zustand",
      "@tanstack/react-query",
      "@zionix-space/lowcode",
      "@zionix-space/design-system"
    ]
  },
  "scripts": {
    "start-zionix-main": "node tools/deployment/zionix-main.script.config.js",
    "build-zionix-main": "node tools/deployment/zionix-main.build.script.config.js",
    "deploy-zionix-main": "node tools/deployment/deploy-to-vercel.js dev zionix-main-host",
    "deploy-zionix-main:prod": "node tools/deployment/deploy-to-vercel.js production zionix-main-host --prod",
    "deploy-admin": "node tools/deployment/deploy-to-vercel.js dev adminApp",
    "deploy-admin:prod": "node tools/deployment/deploy-to-vercel.js production adminApp --prod",
    "lint": "nx run-many --target=lint",
    "lint:fix": "nx run-many --target=lint --fix",
    "eslint": "eslint --ext .js,.ts,.jsx,.tsx apps/",
    "prepare": "husky",
    "perf:audit": "lighthouse http://localhost:4200 --output=json --output-path=./lighthouse-report.json --only-categories=performance --chrome-flags=\"--headless\"",
    "perf:audit-admin": "lighthouse http://localhost:4200/adminApp/menu-setup --output=json --output-path=./lighthouse-admin-report.json --only-categories=performance --chrome-flags=\"--headless\"",
    "perf:analyze": "node -e \"const report = JSON.parse(require('fs').readFileSync('./lighthouse-report.json', 'utf8')); console.log('Performance Score:', report.categories.performance.score * 100); console.log('FCP:', report.audits['first-contentful-paint'].displayValue); console.log('LCP:', report.audits['largest-contentful-paint'].displayValue); console.log('TBT:', report.audits['total-blocking-time'].displayValue);\"",
    "perf:bundle-analyze": "nx build adminApp --analyze && echo 'Bundle analysis complete. Check dist folder for stats.'",
    "perf:monitor": "npm run perf:audit && npm run perf:analyze"
  },
  "private": true,
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@tanstack/react-query": "^5.90.5",
    "@zionix-space/design-system": "^1.3.1",
    "@zionix-space/lowcode": "^1.0.3",
    "dayjs": "^1.11.13",
    "env-cmd": "^10.1.0",
    "framer-motion": "^12.23.24",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.11.2",
    "remixicon": "^4.7.0",
    "tslib": "^2.3.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@module-federation/enhanced": "^0.18.0",
    "@nx/eslint": "22.0.2",
    "@nx/eslint-plugin": "22.0.2",
    "@nx/jest": "22.0.2",
    "@nx/js": "22.0.2",
    "@nx/module-federation": "22.0.2",
    "@nx/react": "22.0.2",
    "@nx/rspack": "22.0.2",
    "@nx/web": "22.0.2",
    "@nx/workspace": "22.0.2",
    "@rspack/cli": "^1.5.8",
    "@rspack/core": "^1.5.8",
    "@rspack/dev-server": "1.1.4",
    "@rspack/plugin-minify": "^0.7.5",
    "@rspack/plugin-react-refresh": "^1.0.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "0.2.39",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "babel-jest": "^30.0.2",
    "css-loader": "^7.1.2",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "file-loader": "^6.2.0",
    "husky": "^9.1.6",
    "jest": "30.0.5",
    "jest-environment-jsdom": "30.0.5",
    "jest-util": "30.0.5",
    "nx": "22.0.2",
    "prettier": "^2.6.2",
    "react-refresh": "~0.14.0",
    "sass-loader": "16.0.4",
    "style-loader": "^4.0.0",
