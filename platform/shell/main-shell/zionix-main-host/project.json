{
  "name": "zionix-main-host",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "platform/shell/main-shell/zionix-main-host/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rspack:rspack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "outputPath": "dist/platform/shell/main-shell/zionix-main-host",
        "main": "platform/shell/main-shell/zionix-main-host/src/main.jsx",
        "tsConfig": "platform/shell/main-shell/zionix-main-host/tsconfig.app.json",
        "rspackConfig": "platform/shell/main-shell/zionix-main-host/rspack.config.js",
        "assets": [
          "platform/shell/main-shell/zionix-main-host/src/favicon.ico",
          "platform/shell/main-shell/zionix-main-host/src/assets"
        ]
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production",
          "optimization": true,
          "sourceMap": false
        }
      }
    },
    "serve": {
      "executor": "@nx/rspack:module-federation-dev-server",
      "options": {
        "buildTarget": "zionix-main-host:build:development",
        "port": 4200
      },
      "configurations": {
        "development": {},
        "production": {
          "buildTarget": "zionix-main-host:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/rspack:module-federation-static-server",
      "defaultConfiguration": "production",
      "options": {
        "serveTarget": "zionix-main-host:serve"
      },
      "configurations": {
        "development": {
          "serveTarget": "zionix-main-host:serve:development"
        },
        "production": {
          "serveTarget": "zionix-main-host:serve:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "platform/shell/main-shell/zionix-main-host/jest.config.js"
      }
    }
  }
}
