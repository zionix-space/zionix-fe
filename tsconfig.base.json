{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@zionix/apiCore": [
        "platform/core/shared-utilities/shared/middleware/axiosCore.js"
      ],
      "@zionix/apiCore/*": [
        "platform/core/shared-utilities/shared/middleware/axiosCore.js"
      ],
      "@zionix/design-system": ["platform/core/design-system"],
      "@zionix/design-system/*": ["platform/core/design-system/*"],
      "@zionix-formEngine/core": ["domains/operations/apps/admin-app/src/pages/FormEngine/core"],
      "@zionix-formEngine/core/*": ["domains/operations/apps/admin-app/src/pages/FormEngine/core/*"],
      "adminApp/Module": [
        "domains/operations/teams/admin-team/admin-app/src/remote-entry.js"
      ],
      "authApp/Module": ["platform/core/authentication/src/remote-entry.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
