{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zionix/design-system": ["platform/core/design-system"],
      "@zionix/design-system/*": ["platform/core/design-system/*"],
      "@zionix/apiCore": [
        "platform/core/shared-utilities/shared/middleware/axiosCore.js"
      ],
      "@zionix/apiCore/*": [
        "platform/core/shared-utilities/shared/middleware/axiosCore.js"
      ],
      "adminApp/Module": [
        "domains/operations/teams/admin-team/admin-app/src/remote-entry.js"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
